<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mostrarEj1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">
        <TextView
            android:id="@+id/Ctitulo"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Calculo de Comision"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/material_on_surface_emphasis_medium"/>
        <Button
            android:id="@+id/btnSalir"
            android:layout_below="@+id/Ctitulo"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Salir"
            android:layout_marginTop="300dp"
            android:onClick="finalizarActividad"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:stretchColumns="1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp">
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>
            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Nombre:" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Codigo Empleado:" />

            <TextView
                android:id="@+id/tvCodigo"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Mes de Venta :" />

            <TextView
                android:id="@+id/tvMes"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Total de Ventas:" />

            <TextView
                android:id="@+id/tvVentas"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Porcentaje de Comision:" />

            <TextView
                android:id="@+id/tvPorcentaje"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="0"
                android:padding="3dip"
                android:text="Comision:" />

            <TextView
                android:id="@+id/tvComision"
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>